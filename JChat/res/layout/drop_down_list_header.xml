<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:paddingBottom="@dimen/drop_down_list_header_padding_bottom"
    android:paddingTop="@dimen/drop_down_list_header_padding_top" >

    <ProgressBar
        android:id="@+id/drop_down_list_header_progress_bar"
        style="@style/drop_down_list_header_progress_bar_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:indeterminate="true"
        android:visibility="gone" />

</RelativeLayout>